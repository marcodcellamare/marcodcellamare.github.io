{
	"compilerOptions": {
		"baseUrl": ".",
		"moduleResolution": "node",
		"paths": {
			"@config": [
				"src/config.json"
			],
			"@components/*": [
				"src/app/components/*"
			],
			"@pages/*": [
				"src/app/pages/*"
			],
			"@assets/*": [
				"src/assets/*"
			],
			"@hooks": [
				"src/hooks/index.ts"
			],
			"@styles/*": [
				"src/styles/*"
			],
			"@interfaces/*": [
				"src/types/*"
			],
			"@utils/*": [
				"src/utils/*"
			]
		}
	}
}