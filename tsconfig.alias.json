{
	"compilerOptions": {
		"baseUrl": ".",
		"composite": true,
		"paths": {
			"@package": [
				"package.json"
			],
			"@config": [
				"src/config.ts"
			],
			"@const": [
				"src/const.ts"
			],
			"@/app/*": [
				"src/app/*"
			],
			"@/assets/*": [
				"src/assets/*"
			],
			"@/stores/*": [
				"src/stores/*"
			],
			"@/hooks/*": [
				"src/hooks/*"
			],
			"@/contexts/*": [
				"src/contexts/*"
			],
			"@/styles/*": [
				"src/styles/*"
			],
			"@/types/*": [
				"src/types/*"
			],
			"@/utils/*": [
				"src/utils/*"
			]
		}
	}
}